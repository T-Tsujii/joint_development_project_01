<%# <%= link_to "メッセージ画面へ",new_message_path %>
<% @messages.each do |message| %>
  <p>
    <%= message.title %>
    <%= message.content %>
    <%= link_to "詳細", message_path(message.id) %>
    <%= link_to "削除", message_path(message.id), method: :delete, data: {confirm: "削除しますか？"} %>
  </p>
<% end %>